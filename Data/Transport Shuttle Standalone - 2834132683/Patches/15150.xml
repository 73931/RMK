<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>SRTS Expanded</li>
    </mods>
    <nomatch Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/WorldObjectDef[defName="TravelingSRTS"]/label</xpath>
          <value>
            <label>비행중인 상단</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/WorldObjectDef[defName="TravelingSRTS"]/description</xpath>
          <value>
            <description>상단이 비행중.</description>
          </value>
        </li>
      </operations>
    </nomatch>
  </Operation>
</Patch>