<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Combat Extended</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/ThingDef[defName="MMW_Dragoon_Axe"]/tools/li[1]/label</xpath>
          <value>
            <label>손잡이</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/ThingDef[defName="MMW_Dragoon_Axe"]/tools/li[2]/label</xpath>
          <value>
            <label>휘두르기</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/ThingDef[defName="MMW_Dragoon_Axe"]/tools/li[3]/label</xpath>
          <value>
            <label>찌르기</label>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Cinders of the Embergarden</li>
    </mods>
    <match Class="PatchOperationFindMod">
      <mods>
        <li>Combat Extended</li>
      </mods>
      <match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
          <li Class="PatchOperationReplace">
            <success>Always</success>
            <xpath>/Defs/ThingDef[defName="MMW_Dragoon_ElectricScythe"]/tools/li[1]/label</xpath>
            <value>
              <label>손잡이</label>
            </value>
          </li>
          <li Class="PatchOperationReplace">
            <success>Always</success>
            <xpath>/Defs/ThingDef[defName="MMW_Dragoon_ElectricScythe"]/tools/li[2]/label</xpath>
            <value>
              <label>칼날</label>
            </value>
          </li>
        </operations>
      </match>
    </match>
  </Operation>
</Patch>