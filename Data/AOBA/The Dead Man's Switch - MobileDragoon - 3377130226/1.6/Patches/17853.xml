<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Combat Extended</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/ThingDef[defName="DMS_Apparel_MissilePod"]/verbs/*[.//*[contains(text(), 'Verb_LaunchProjectileStaticCE')]]/label</xpath>
          <value>
            <label>launch missile</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/ThingDef[defName="DMS_Apparel_MissilePod"]/comps/li[2]/chargeNoun</xpath>
          <value>
            <chargeNoun>missile</chargeNoun>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/ThingDef[defName="DMS_Apparel_SwarmMissilePod"]/verbs/*[.//*[contains(text(), 'Verb_LaunchProjectileStaticCE')]]/label</xpath>
          <value>
            <label>launch rocket</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/ThingDef[defName="DMS_Apparel_SwarmMissilePod"]/comps/li[2]/chargeNoun</xpath>
          <value>
            <chargeNoun>rocket</chargeNoun>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/ThingDef[defName="DMS_Apparel_MissilePodPlus"]/verbs/*[.//*[contains(text(), 'Verb_LaunchProjectileStaticCE')]]/label</xpath>
          <value>
            <label>launch missile</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/ThingDef[defName="DMS_Apparel_MissilePodPlus"]/comps/li[2]/chargeNoun</xpath>
          <value>
            <chargeNoun>missile</chargeNoun>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/ThingDef[defName="DMS_Dragoon_Axe"]/tools/li[1]/label</xpath>
          <value>
            <label>손잡이</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/ThingDef[defName="DMS_Dragoon_Axe"]/tools/li[2]/label</xpath>
          <value>
            <label>휘두르기</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/ThingDef[defName="DMS_Dragoon_Axe"]/tools/li[3]/label</xpath>
          <value>
            <label>찌르기</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/ThingDef[defName="DMS_Dragoon_Sword"]/tools/li[1]/label</xpath>
          <value>
            <label>손잡이</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/ThingDef[defName="DMS_Dragoon_Sword"]/tools/li[2]/label</xpath>
          <value>
            <label>휘두르기</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <success>Always</success>
          <xpath>/Defs/ThingDef[defName="DMS_Dragoon_Sword"]/tools/li[3]/label</xpath>
          <value>
            <label>찌르기</label>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Combat Extended</li>
    </mods>
    <match Class="PatchOperationFindMod">
      <mods>
        <li>The Dead Man's Switch - AncientCorps</li>
      </mods>
      <match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
          <li Class="PatchOperationReplace">
            <success>Always</success>
            <xpath>/Defs/ThingDef[defName="DMS_Apparel_StugnaLauncher"]/verbs/*[.//*[contains(text(), 'Verb_LaunchProjectileStaticCE')]]/label</xpath>
            <value>
              <label>launch stugna missile</label>
            </value>
          </li>
        </operations>
      </match>
    </match>
  </Operation>
</Patch>